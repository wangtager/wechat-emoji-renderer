{
  "name": "wechat-emoji-renderer",
  "version": "1.0.0",
  "description": "微信表情渲染器 - 支持 React、Vue3 和原生 JavaScript",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./react": {
      "types": "./dist/react/index.d.ts",
      "import": "./dist/react/index.js",
      "require": "./dist/react/index.cjs"
    },
    "./vue": {
      "types": "./dist/vue/index.d.ts",
      "import": "./dist/vue/wechat-emoji-renderer-vue.es.js",
      "require": "./dist/vue/wechat-emoji-renderer-vue.umd.js"
    },
    "./dist/vue/style.css": "./dist/vue/style.css"
  },
  "files": [
    "dist",
    "src",
    "react",
    "vue",
    "README.md"
  ],
  "scripts": {
    "build": "npm run clean && tsup && npm run build:vue",
    "build:vue": "vite build --config ./vue/vite.config.ts",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "wechat",
    "emoji",
    "react",
    "vue",
    "javascript",
    "renderer",
    "微信表情"
  ],
  "author": "tager",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=16.8.0",
    "vue": ">=3.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "vue": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^24.0.3",
    "@types/react": "^18.0.0",
    "@vitejs/plugin-vue": "^5.1.0",
    "ts-node": "^10.9.2",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.3.5",
    "vite-plugin-dts": "^3.9.1",
    "vue": "^3.0.0"
  }
}